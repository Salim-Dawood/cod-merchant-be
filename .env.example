PORT=3001
DB_HOST=YOUR_DB_HOST
DB_PORT=3306
DB_USER=YOUR_DB_USER
DB_PASSWORD=YOUR_DB_PASSWORD
DB_NAME=YOUR_DB_NAME
CORS_ORIGIN=https://YOUR_FRONTEND.onrender.com
PUBLIC_BASE_URL=https://YOUR_BACKEND.onrender.com
FRONTEND_BASE_URL=https://YOUR_FRONTEND.onrender.com
JWT_ACCESS_SECRET=CHANGE_ME_LONG_RANDOM_STRING
JWT_REFRESH_SECRET=CHANGE_ME_LONG_RANDOM_STRING
PASSWORD_RESET_TTL_MINUTES=30
DB_SSL=true
DB_SSL_CA=PASTE_AIVEN_CA_CERT_HERE
BCRYPT_SALT_ROUNDS=10

# Uploads
# On Render, attach a Persistent Disk and set UPLOAD_DIR to its mount path, e.g. /var/data/uploads
UPLOAD_DIR=

# Client role
# Optional: force client registrations to attach to a specific branch id.
CLIENT_BRANCH_ID=

# Cloudinary (optional for uploads)
# Use CLOUDINARY_URL or set the individual fields below.
CLOUDINARY_URL=
CLOUDINARY_CLOUD_NAME=
CLOUDINARY_API_KEY=
CLOUDINARY_API_SECRET=

# Supabase Storage (optional for uploads)
SUPABASE_URL=
SUPABASE_SERVICE_ROLE_KEY=
SUPABASE_BUCKET=

# SMTP (optional, for password reset emails)
# Brevo API (preferred over SMTP on Render; avoids SMTP port timeouts)
BREVO_API_KEY=
# SMTP fallback (optional if BREVO_API_KEY is set)
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASS=
SMTP_FROM=
SMTP_CONNECTION_TIMEOUT_MS=10000
SMTP_GREETING_TIMEOUT_MS=10000
SMTP_SOCKET_TIMEOUT_MS=15000

# Client role name for read-only browsing
CLIENT_ROLE_NAME=Client
